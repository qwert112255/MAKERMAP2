        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/phone" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>